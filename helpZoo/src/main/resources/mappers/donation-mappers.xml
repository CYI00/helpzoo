<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="donationMapper">
	
	<resultMap type="Donation" id="donationResultSet">
        <id property="dBoardNo" column="DONATION_BOARD_NO"/>
        <result property="dBoardPlan" column="DONATION_BOARD_PLAN"/>
        <result property="dBoardTitle" column="DONATION_BOARD_TITLE"/>
        <result property="dBoardQuestion1" column="DONATION_BOARD_QUESTION1"/>
        <result property="dBoardQuestion2" column="DONATION_BOARD_QUESTION2"/>
        <result property="dBoardQuestion3" column="DONATION_BOARD_QUESTION3"/>
        <result property="dBoardQuestion4" column="DONATION_BOARD_QUESTION4"/>
        <result property="dBoardQuestion5" column="DONATION_BOARD_QUESTION5"/>
		<result property="dBoardTargetAmount" column="DONATION_BOARD_TARGET_AMOUNT"/>
		<result property="dBoardCurrentAmount" column="DONATION_BOARD_CURRENT_AMOUNT"/>
		<result property="dBoardReadCount" column="DONATION_BOARD_READ_COUNT"/>
		<result property="dBoardCrateDate" column="DONATION_BOARD_CREATE_DT"/>
		<result property="dBoardModifyDate" column="DONATION_BOARD_MODIFY_DT"/>
		<result property="dBoardEndDate" column="DONATION_BOARD_START_DT"/>
		<result property="dBoardStartDate" column="DONATION_BOARD_END_DT"/>
		<result property="dBoardLikeButton" column="DONATION_BOARD_LIKE_BUTTON"/>
		<result property="dBoardStatus" column="DONATION_BOARD_STATUS"/>
		<result property="organizationNo" column="ORGANIZATION_NO"/>
		<result property="dBoardWriter" column="DONATION_BOARD_WRITER"/>
		<result property="dBoardCategory" column="DONATION_BOARD_CATEGORY"/>
		<result property="dBoardType" column="DONATION_BOARD_TYPE"/>
	</resultMap>
	
	
	<resultMap type="Attachment" id="attachmentResultSet">
		<id property="fileNo" column="FILE_NO"/>	
		<result property="parentBoardNo" column="PARENT_BOARD_NO"/>
		<result property="fileOriginName" column="FILE_ORIGIN_NAME"/>
		<result property="fileChangeName" column="FILE_CHANGE_NAME"/>
		<result property="filePath" column="FILE_PATH"/>
		<result property="fileLevel" column="FILE_LEVEL"/>
	</resultMap>


	<!-- 전체 게시글 수 조회 -->  
	<select id="getListCount" parameterType="_int" resultType="_int">
		SELECT COUNT(*) FROM V_BOARD
		WHERE BOARD_TYPE = #{boardType}
	</select>
  
  	
  
  	<!-- 게시글 목록 조회 -->
  	<select id="selectList" parameterType="_int" resultMap="boardResultSet">
  		SELECT * FROM V_BOARD
  		WHERE BOARD_TYPE = #{boardType}
  		ORDER BY BOARD_NO DESC
  	</select>
  	
  	
  	<!-- 게시글 상세 조회 -->
  	<select id="selectBoard" parameterType="_int" resultMap="boardResultSet">
  		SELECT * FROM V_BOARD
  		WHERE BOARD_NO = ${boardNo}
  		AND BOARD_STATUS = 'Y'
  	</select>
  	
  	<!-- 게시글 조회수 증가 -->
  	<update id="increaseCount" parameterType="_int">
  		UPDATE BOARD SET READ_COUNT = READ_COUNT+1
  		WHERE BOARD_NO = #{boardNo}
  	</update>
  
  	<!-- 다음 게시글 번호 조회 -->
  	<select id="selectNextNo" resultType="_int">
        SELECT SEQ_BNO.NEXTVAL FROM DUAL
    </select>
  	
  	<!-- 게시글 삽입 -->
  	<insert id="insertBoard" parameterType="Board" >
	  	INSERT INTO BOARD
		VALUES (#{boardNo}, #{boardTitle}, #{boardContent}, 
	            DEFAULT, DEFAULT, DEFAULT, DEFAULT, #{boardWriter}, #{boardCategory}, #{boardType})
  	</insert>
  	
  	
  	
  	<!-- 게시글 삭제 -->
  	<update id="boardDelete" parameterType="_int">
  		UPDATE BOARD SET BOARD_STATUS = 'N'
  		WHERE BOARD_NO = #{boardNo}
  	</update>
  	
  	
  	
  	<!-- 게시글 수정 -->
  	<update id="updateBoard" parameterType="Board">
  		UPDATE BOARD SET BOARD_TITLE=#{boardTitle}, 
  		BOARD_CONTENT = #{boardContent}, BOARD_CATEGORY = #{boardCategory}
  		,BOARD_MODIFY_DT = SYSDATE
  		WHERE BOARD_NO = #{boardNo}
  	</update>
  	
  	
  	
  	<!-- 파일 정보 삽입 -->
  	<insert id="insertAttachment" parameterType="Attachment">
  		INSERT INTO ATTACHMENT VALUES(
  			SEQ_FNO.NEXTVAL, #{parentBoardNo},
  			#{fileOriginName}, #{fileChangeName}, #{filePath}, #{fileLevel}
  		)
  	</insert>
  	
  	<!-- 게시글 이미지 조회 -->
  	<select id="selectFiles" parameterType="_int" resultMap="attachmentResultSet">
  		SELECT * FROM ATTACHMENT
  		WHERE PARENT_BOARD_NO = #{boardNo}
  		ORDER BY FILE_LEVEL
	</select>
	
	
	<!-- 파일 정보 삭제 -->
	<delete id="deleteAttachment" parameterType="_int">
		DELETE FROM ATTACHMENT
		WHERE PARENT_BOARD_NO=#{boardNo}
	</delete>
	
	<!-- 썸네일 목록 조회 -->
	<!-- Mybatis란? : CRUD 편하게하기 위해 xml로 구조화한 Mapper 설정 파일을 통해
					JDBC를 구현한 영속성 프레임워크
		* Mybatis 장점
		1) 오픈 소스이며 무료이다
		2) 관심사를 분리하여 이식성이 좋고, 유지보수에 유리하다
		3) 동적 쿼리를 작성하기 유리하다
	-->
	<select id="selectThumbnailList" parameterType="list" resultMap="attachmentResultSet">
		SELECT * FROM ATTACHMENT
		WHERE FILE_LEVEL =0
		AND PARENT_BOARD_NO IN 
		<!-- 동적 쿼리 foreach : 특정 collectino 객체를 반복 접근하는 구문 -->
		<!-- 
		collection : 반복 접근할 객체
		index : 현재 접근 중인 index
		item : 현재 접근 중인 요소 
		open : 반복문 시작 시 추가할 구문 / close : 반복문 종료 시 추가할 구문
		separator : 반복 접근 시 마다 추가할 구문(구분자)
		 -->
		<foreach collection="list" index="i" item="board"
			open="(" close=")" separator=",">
			#{board.boardNo}
		</foreach>
	</select>
	
	<!-- 파일 수정 -->
	<update id="updateAttachment" parameterType="Attachment">
		UPDATE ATTACHMENT SET 
		FILE_ORIGIN_NAME =#{fileOriginName},
		FILE_CHANGE_NAME =#{fileChangeName}
		WHERE FILE_NO = #{fileNo}
	</update>
	
	<!-- 파일 1개 정보 삭제 -->
	<delete id="deleteAttachment2" parameterType="_int">
		DELETE FROM ATTACHMENT
		WHERE FILE_NO = #{fileNo}
	</delete>
	
	
	
	<!-- 최근 5일 조회수 높은 게시글 조회 -->
	<!-- <![CDATA[ 부등호 포함 sql 구문 ]]>
		xml 파일에서 태그 기호(<, >)를 태그가 아닌 문자 그대로로 인식 시키는 구문
	-->
	<select id="selectTopView" parameterType="_int" resultMap="boardResultSet">
		SELECT * FROM
			(SELECT * FROM V_BOARD
			WHERE BOARD_TYPE=#{boardType}
			AND BOARD_CREATE_DT BETWEEN TO_DATE(TO_CHAR(SYSDATE, 'YYYY-MM-DD'))-5 AND SYSDATE
			ORDER BY READ_COUNT DESC)
		<![CDATA[	
		WHERE ROWNUM <= 5
		]]>
	</select>
	
	
	<!-- 검색 조건이 포함된 전체 게시글 수 조회 -->
	<select id="getSearchListCount" parameterType="map" resultType="_int">
		SELECT COUNT(*) FROM V_BOARD
		<!-- Map 객체를 사용할 경우 key값을 호출하면 해당 value값을 얻을 수 있음 -->
		WHERE BOARD_TYPE = #{type}
		
		<!-- Map 객체에 존재하는 key값이 search인 요소의 ct필드 값이 null이 아닐 경우 -->
		<if test="search.ct != null">
			AND CATEGORY_NM IN
			<foreach collection="search.ct" index="index" 
				item="ctName" open="(" close=")" separator=",">
				#{ctName}
			</foreach>
		</if>
		
		<!-- Map 객체에 존재하는 key값이 search인 요소의 sVal필드 값이 null이 아닌 경우 -->
		<if test="search.sVal !=null">
			<!-- bind 태그 : 동적 sql 구문 내에서 사용할 변수 선언 -->
			<bind name="sv" value="'%' + search.sVal + '%'"/>
			
			AND 
			
			<choose>
				<when test="search.sKey == 'tit'">
					BOARD_TITLE LIKE #{sv}
				</when>

				<when test="search.sKey == 'con'">
					BOARD_CONTENT LIKE #{sv}
				</when>
			
				<otherwise>
					(BOARD_TITLE LIKE #{sv} 
					OR BOARD_CONTENT LIKE #{sv})
				</otherwise>			
			</choose>

		
		</if>
	
	</select>
	
	
	<!-- 검색 게시글 목록 조회 -->
	<select id="selectSearchList" parameterType="map" resultMap="boardResultSet">
		SELECT * FROM V_BOARD
		<!-- Map 객체를 사용할 경우 key값을 호출하면 해당 value값을 얻을 수 있음 -->
		WHERE BOARD_TYPE = #{type}
		
		<!-- Map 객체에 존재하는 key값이 search인 요소의 ct필드 값이 null이 아닐 경우 -->
		<if test="search.ct != null">
			AND CATEGORY_NM IN
			<foreach collection="search.ct" index="index" 
				item="ctName" open="(" close=")" separator=",">
				#{ctName}
			</foreach>
		</if>
		
		<!-- Map 객체에 존재하는 key값이 search인 요소의 sVal필드 값이 null이 아닌 경우 -->
		<if test="search.sVal !=null">
			<!-- bind 태그 : 동적 sql 구문 내에서 사용할 변수 선언 -->
			<bind name="sv" value="'%' + search.sVal + '%'"/>
			
			AND 
			
			<choose>
				<when test="search.sKey == 'tit'">
					BOARD_TITLE LIKE #{sv}
				</when>

				<when test="search.sKey == 'con'">
					BOARD_CONTENT LIKE #{sv}
				</when>
			
				<otherwise>
					(BOARD_TITLE LIKE #{sv} 
					OR BOARD_CONTENT LIKE #{sv})
				</otherwise>			
			</choose>
		
		</if>
		
		ORDER BY BOARD_NO DESC
		
	</select>
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	<resultMap type="Reply" id="replyResultSet">
		<id property="dReplyNo" column="DONATION_REPLY_NO"/>
        <result property="dReplyContent" column="DONATION_REPLY_CONTENT"/>
        <result property="dReplyReadCount" column="DONATION_REPLY_READ_COUNT"/>
        <result property="dReplyWriter" column="DONATION_REPLY_WRITER"/>
        <result property="dReplyCreateDate" column="DONATION_REPLY_CREATE_DT"/>
        <result property="dReplyModifyDate" column="DONATION_REPLY_MODIFY_DT"/>
        <result property="dReplyStatus" column="DONATION_REPLY_STATUS"/>
        <result property="dBoardNo" column="DONATION_BOARD_NO"/>
	</resultMap>
	
	<select id="selectList" parameterType="_int" resultMap="replyResultSet">
		SELECT * FROM V_REPLY
		WHERE DONATION_REPLY_STATUS ='Y'
		AND DONATION_BOARD_NO = #{boardNo}
		ORDER BY DONATION_BOARD_NO DESC, DONATION_REPLY_NO ASC
	</select>
	
	
	<insert id="insertRelpy" parameterType="Reply">
		INSERT INTO DONATION_REPLY(DONATION_REPLY_NO, DONATION_REPLY_CONTENT, DONATION_BOARD_NO, 
							 DONATION_REPLY_WRITER)
		VALUES(SEQ_DRPNO.NEXTVAL, #{dReplyContent}, #{dBoardNo}, #{dReplyWriter})
	</insert>
	
	
	<update id="updateReply" parameterType="Reply">
		UPDATE DONATION_REPLY SET 
		DONATION_REPLY_CONTENT = #{dReplyContent}
		WHERE DONATION_REPLY_NO = #{dReplyNo}
	</update>
</mapper>
